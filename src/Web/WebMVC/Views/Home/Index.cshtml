@model HomeViewModel<DTOs.PlateDto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Test check.</p>
</div>
<div>
    @if (Model != null && Model.Items.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <a href="@Url.Action("Index", new { sortBy = "Registration", sortDirection = Model.SortBy == "Registration" && Model.SortDirection == "asc" ? "desc" : "asc", pageNumber = Model.CurrentPage })">
                            Plate
                            @if (Model.SortBy == "Registration")
                            {
                                <span>@(Model.SortDirection == "asc" ? "↑" : "↓")</span>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("Index", new { sortBy = "PurchasePrice", sortDirection = Model.SortBy == "PurchasePrice" && Model.SortDirection == "asc" ? "desc" : "asc", pageNumber = Model.CurrentPage })">
                            Purchase Price
                            @if (Model.SortBy == "PurchasePrice")
                            {
                                <span>@(Model.SortDirection == "asc" ? "↑" : "↓")</span>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("Index", new { sortBy = "SalePrice", sortDirection = Model.SortBy == "SalePrice" && Model.SortDirection == "asc" ? "desc" : "asc", pageNumber = Model.CurrentPage })">
                            Sale Price
                            @if (Model.SortBy == "SalePrice")
                            {
                                <span>@(Model.SortDirection == "asc" ? "↑" : "↓")</span>
                            }
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plate in Model.Items)
                {
                    <tr>
                        <td>@plate.Registration</td>
                        <td>@plate.PurchasePrice</td>
                        <td>@plate.CalculatedSalePrice</td>
                    </tr>
                }
            </tbody>
        </table>
        <nav>
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-sortBy="@Model.SortBy" asp-route-sortDirection="@Model.SortDirection">
                        Previous
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-sortBy="@Model.SortBy" asp-route-sortDirection="@Model.SortDirection">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-sortBy="@Model.SortBy" asp-route-sortDirection="@Model.SortDirection">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <p>No plates available to display.</p>
    }
</div>
